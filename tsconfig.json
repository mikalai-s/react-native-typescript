{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "build",
        "target": "es6",
        "types": [
            "jest",
            "react",
            "react-native"
        ]
    },
    "include": [
        "./src/"
    ],
    "exclude": [
        "build",
        "*.test.*"
    ]
}